<%- include('./partials/head') %>

<body>
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>

	<!-- Datos del usuario -->
	
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/usuarios/<%= lista.fotoUsuario %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= lista.mail %>
						<% if (locals.user) { %>
							<% if (locals.user.mail === lista.mail) { %>
								<a href="/profile/edit/<%= lista.id %>">
									<i class="fas fa-cog"></i>
								</a>
							<% } %>
						<% } %>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li> <%= lista.producto.length %> Productos</li>
						<li>200 seguidores</li>
						<li> <%= lista.comentario.length %> Comentarios </li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for (let i = 0; i< lista.producto.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%= lista.producto[i].id %>">
							<figure class="product-box_image">
								<img src= "/images/products/<%= lista.producto[i].fotoProducto %>" alt=<%= lista.producto[i].nombre %>>
							</figure>
							<article class="product-box_data">
								<h2> <%= lista.producto[i].nombreProducto %> </h2>
								<p> <%= lista.producto[i].descripcionProducto %> </p>
								<p>Comentarios: <%= lista.comentario.length %> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
			
	
		</div>
	</div>
	<!-- /Mis productos -->

	<%- include('./partials/footer') %>
</body>	
</html>