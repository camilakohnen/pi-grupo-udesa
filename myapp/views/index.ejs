<%- include('./partials/head') %>

<body>
	
<%- include('./partials/header') %>
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/bannercafe.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
					<!-- Show the "ultimos" products -->
					<% for (let i = 0; i< 4; i++) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/id/<%= lista[i].id %>">
								<figure class="product-box_image">
									<img src= <%= lista[i].imagen %> alt=<%= lista[i].nombre %>>
								</figure>
								<article class="product-box_data">
									<h2> <%= lista[i].nombre %> </h2>
									<p> <%= lista[i].descripcion %> </p>
									<p> Comentarios: 3 </p>
								</article>
							</a>
						</section>
					</div>
					<% } %>
					<div class="col-12">
						<h2 class="products-title">Ofertas</h2>
					</div>
					<% for (let i = 5; i< 9; i++) { %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/product/id/<%= lista[i].id %>">
									<figure class="product-box_image">
										<img src= <%= lista[i].imagen %> alt=<%= lista[i].nombre %>>
									</figure>
									<article class="product-box_data">
										<h2> <%= lista[i].nombre %> </h2>
										<p> <%= lista[i].descripcion %> </p>
										<p> Comentarios: 3 </p>
									</article>
								</a>
							</section>
						</div>
						<% } %>
		</div>
	</div>
			<!-- /MÃ¡s comentados -->


<%- include('./partials/footer') %>

</body>	
</html>