<%- include('./partials/head') %>

<body>
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12">
					<form class="form" action="/product/edit/id/<%= lista.id %>" method="POST">
						<div>
							<% if (locals.errores) { %>
								<% for (let error in errores) {%>
									<p style="color:wheat; font-size: 15px;"> <%= errores[error].msg %></p>
								<% } %>
							<% } %>
						</div>
						<div>
							<label> Imagen: </label><input type="text" name="fotoProducto" id="fotoProducto" value="<%= lista.fotoProducto %>" >
						</div>
						<div>
							<label> Nombre del Producto: </label><input type="text" name="nombreProducto" id="nombreProducto" value="<%= lista.nombreProducto %>"  >
						</div>
						<div>
							<label> Descripci√≥n: </label><input type="text" name="descripcionProducto" id="descripcionProducto" value="<%= lista.descripcionProducto %>" >
						</div>
						<div>
							<button type="submit">Enviar</button>
						</div>
					</form>
			</h2>
		</div>

	</div>


<%- include('./partials/footer') %>
</body>

</html>