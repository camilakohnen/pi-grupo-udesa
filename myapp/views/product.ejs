<%- include('./partials/head') %>

<body>
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"> <%= lista.Producto.nombreproducto %> </h2> 
			<p class="product-detail-description">
				<a href="/product/edit">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= lista.Producto.fotoProducto %>" alt="" class="product-detail-img">
					<p class="product-detail-description"> <%= lista.Producto.descripcionProducto %> </p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for (let i = 0; i < lista.Usuario.length; i++) { %>
							<article>
								<img src= <%=lista.Usuario[i].fotoUsuario%> alt="">
								<div class="data">
									<p class="user">
									<strong> <a href="/profile"> <%= lista.Usuario.mail %> </a> </strong>
										<%= lista.Comentario.textoComentrio %>
								</div>
							</article>
						<% } %> 
						

					</section>
					<form class="form" action="" method="GET">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<%- include('./partials/footer') %>

</body>	
</html>