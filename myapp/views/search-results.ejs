<%- include('./partials/head') %>

<body>
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>
	
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<% if (result.length == 0) { %>
					<p class="products-title"> No hay resultados para tu busqueda </p>
				<% } else { %>
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i< result.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%= result[i].id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= result[i].fotoProducto %>" alt=<%= result[i].nombreProducto %>>
							</figure>
							<article class="product-box_data">
								<h2> <%= result[i].nombreProducto %> </h2>
								<p> <%= result[i].descripcionProducto %> </p>
								<a href="/profile/id/<%= result[i].idUsuarios %>"> <p><%= result[i].usuarios.mail%></p></a>
								<p> Comentarios: <%= result[i].comentario.length %> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
			<% } %>
	<%- include('./partials/footer') %>

</body>

</html>